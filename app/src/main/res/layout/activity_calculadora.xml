<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora_activity"
    android:background="@color/black">

    <EditText
        android:id="@+id/numArriba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:textAlignment="viewEnd"
        android:textColor="@color/grey"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginHorizontal="30dp" />

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="75dp"
        android:textAlignment="viewEnd"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        android:layout_marginHorizontal="30dp" />

    <GridLayout
        android:columnCount="4"
        android:rowCount="5"
        android:layout_margin="5dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_default="spread"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/ac"
            android:backgroundTint="@color/grey_calc"
            android:textColor="@color/black"
            android:text="AC"
            android:textSize="20dp"
            app:layout_constraintDimensionRatio="1:1"
            />

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/masmenos"
            android:backgroundTint="@color/grey_calc"
            android:textColor="@color/black"
            android:text="+/-"
            android:textSize="20dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/porcentaje"
            android:backgroundTint="@color/grey_calc"
            android:textColor="@color/black"
            android:text="%"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1" />

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/division"
            android:backgroundTint="@color/orange_calc"
            android:textColor="@color/white"
            android:text="รท"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/siete"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="7"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/ocho"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/ocho"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="8"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/nueve"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="9"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/multiplicacion"
            android:backgroundTint="@color/orange_calc"
            android:textColor="@color/white"
            android:text="ร"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/cuatro"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="4"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@id/cinco"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/cinco"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="5"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/seis"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="6"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/menos"
            android:backgroundTint="@color/orange_calc"
            android:textColor="@color/white"
            android:text="-"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/uno"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="1"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/dos"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="2"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/tres"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text="3"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/mas"
            android:backgroundTint="@color/orange_calc"
            android:textColor="@color/white"
            android:text="+"
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="175dp"
            android:layout_margin="6dp"
            android:textAlignment="textStart"
            android:id="@+id/cero"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text=" 0"
            android:textSize="30dp"
            android:layout_columnSpan="2"
            />

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/coma"
            android:backgroundTint="@color/dark_grey_calc"
            android:textColor="@color/white"
            android:text=","
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

        <Button
            android:layout_height="80dp"
            android:layout_width="75dp"
            android:layout_margin="6dp"
            android:layout_gravity="center"
            android:id="@+id/igual"
            android:backgroundTint="@color/orange_calc"
            android:textColor="@color/white"
            android:text="="
            android:textSize="30dp"
            app:layout_constraintDimensionRatio="1:1"/>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>