<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DanceMonsters_activity">

    <ImageView
        android:id="@+id/imagen_grande"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/dance_monster_grande"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-25dp"
        />

    <ImageView
        android:id="@+id/imagen_pequeña"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/dance_monster_mini"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="-20dp"
        />


    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dance Monsters"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toEndOf="@id/imagen_pequeña"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="-20dp"
        />

    <TextView
        android:id="@+id/autor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Autor: Netflix"
        android:textSize="15dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/imagen_pequeña"
        app:layout_constraintBottom_toBottomOf="@id/imagen_grande"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="-20dp"
        />

    <TextView
        android:id="@+id/cap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capitulo: 1"
        android:textSize="15dp"
        android:textColor="@color/azul_monsters"
        app:layout_constraintStart_toEndOf="@id/imagen_pequeña"
        app:layout_constraintTop_toBottomOf="@id/autor"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-20dp"
        />

    <TextView
        android:id="@+id/gen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero: Talent Show"
        android:textSize="15dp"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@id/imagen_pequeña"
        app:layout_constraintTop_toBottomOf="@id/cap"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-20dp"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción: Bailarines aficionados disfrazados de avatares CGI realizan sus mejores movimientos con la esperanza de asombrar a un jurado y ganar 250.000 dolares"
        android:textSize="12dp"
        android:textColor="@color/green_monsters"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagen_pequeña"
        android:padding="22dp"
        />

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <ImageView
            android:id="@+id/like"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="25dp"
            android:src="@drawable/btn_like"
            />

        <ImageView
            android:id="@+id/dislike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/btn_dislike"
            android:layout_marginHorizontal="25dp"
            />

        <ImageView
            android:id="@+id/fav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/favoritos"
            android:layout_marginHorizontal="30dp"
            />

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Activity1"
            android:textColor="@color/purple"
            android:layout_margin="10dp"

            />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Activity2"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Activity3"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>