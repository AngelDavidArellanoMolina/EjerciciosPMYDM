<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Frutas_activity"
    android:background="@color/bg_color"
    android:paddingHorizontal="50dp">

    <ImageButton
        android:id="@+id/frutas"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/frutas"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/bg_color"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/albaricoque"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/albaricoque"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/bg_color"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ImageButton
        android:id="@+id/platano"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/platano"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/bg_color"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/albaricoque"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/verduras"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/verduras"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/bg_color"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/frutas"
        app:layout_constraintStart_toStartOf="parent"
        />
    <ImageButton
        android:id="@+id/pimiento"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/pimiento"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/bg_color"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/platano"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ImageButton
        android:id="@+id/patata"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/patata"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="@color/bg_color"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/pimiento"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/texto_lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cesta de la compra:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/patata"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ListView
        android:id="@+id/listView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/texto_lista"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>