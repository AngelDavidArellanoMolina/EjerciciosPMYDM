<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color"
    android:padding="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Layouts"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:background="@drawable/buttons_shape"
            android:layout_marginHorizontal="5dp"
            android:onClick="layout1"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="2"
            android:background="@drawable/buttons_shape"
            android:layout_marginHorizontal="5dp"
            android:onClick="layout2"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:background="@drawable/buttons_shape"
            android:layout_marginHorizontal="5dp"
            android:onClick="layout3"/>

        <Button
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:background="@drawable/buttons_shape"
            android:layout_marginHorizontal="5dp"
            android:onClick="layout4"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. EditText y los diferentes teclados"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginVertical="10dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="4"
        android:layout_marginVertical="15dp"
        android:layout_gravity="center"
        >
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Text"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="text"
            />
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Number"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="number"
            />
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Pass"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="textPassword"
            />
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Date"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="date"
            />

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Email"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Decimal"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="numberDecimal"
            />
        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Phone"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="phone"
            />

        <EditText
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:hint="Time"
            android:textColorHint="@color/elements_color"
            android:backgroundTint="@color/elements_color"
            android:inputType="time"
            />
    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Barreras Horizontales y Verticales"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="start"
        android:layout_marginVertical="10dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir layout"
        android:background="@drawable/buttons_shape"
        android:layout_marginHorizontal="5dp"
        android:onClick="barriers"/>

</LinearLayout>
